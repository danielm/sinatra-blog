<h1><%= t.panel.title %> <small><%= @title %></small></h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th><%= t.panel.fields.from %></th>
			<th><%= t.panel.fields.date %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<tbody>
<% @entities.each do |msg| %>
		<tr>
			<td><%= msg.id %></td>
			<td>
				<a href="/admin/message/read/<%= msg.id %>"><%= msg.name %></a>
				<% if !msg.read %><em>NEW</em><% end %>
			</td>
			<td>
				<%= msg.created_at %>
			</td>
			<td class="list-actions">
				<a role="button" title="<%= t.panel.delete %>" class="btn btn-default btn-delete" href="/admin/message/delete/<%= msg.id %>"><span class="glyphicon glyphicon-trash"></span></a>
			</td>
		</tr>
<% end %>
<% if @entities.length == 0 %>
		<tr>
			<td colspan="4"><%= t.panel.no_results %></td>
		</tr>
<% end %>
	</tbody>
</table>
