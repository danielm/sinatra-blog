<h1>Administracion <small>Edit Post #<%= @values[:id] %></small></h1>

<a href="/admin/posts">Back to List	</a>


<form action="/admin/posts/edit/<%= @values[:id] %>" method="post" role="form">
 <div class="form-group">
   <label for="post_title">Title:</label>
   <br>
   <input id="post_title" class="form-control" name="post[title]" type="text" value="<%= @values[:title] %>" style="width=90%"/>
   <% if @errors[:title] %>
  		<div><strong><%= @errors[:title] %></strong></div>
  	<% end %>
 </div>
 <div class="form-group">
   <label for="post_body">Body:</label>
   <br>
   <textarea id="post_body" name="post[body]" class="form-control" rows="10"><%= @values[:body] %></textarea>
   <% if @errors[:body] %>
  		<div><strong><%= @errors[:body] %></strong></div>
  	<% end %>
 </div>
 <button type="submit" class="btn btn-success">Submit</button>
</form>
	