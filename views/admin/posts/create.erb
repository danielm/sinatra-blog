<h1>Administracion <small>Create Post</small></h1>

<a href="/admin/posts">Back to List	</a>


<form action="/admin/posts/create" method="post"role="form">
 <div class="form-group">
   <label for="post_title">Title:</label>
   <br>
   <input id="post_title" class="form-control" name="post[title]" type="text" value="<%= @values[:name] %>" style="width=90%"/>
 </div>
 <div class="form-group">
   <label for="post_body">Body:</label>
   <br>
   <textarea id="post_body" name="post[body]" class="form-control" rows="10"><%= @values[:body] %></textarea>
 </div>
 <button type="submit" class="btn btn-success">Submit</button>
</form>
	