  <div class="duy-page-title">
	<h1><%= t.contact.title %></h1>
	<hr />
  </div>

  <form action="<%= link 'contact' %>" method="post" role="form" class="contact-form">
    <input type="hidden" name="token" value="<%= csrf_token %>" />
    <% if @message.errors.count > 0 %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <ul>
          <% @message.errors.full_messages.each do |e| %>
             <li><%= e %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label class="control-label"><%= t.contact.name %>:</label>
      <input type="text" class="form-control" name="message[name]" value="<%= @message.name %>">
    </div>

    <div class="form-group">
      <label class="control-label"><%= t.contact.email %></label>
      <input type="text" class="form-control" name="message[email]" value="<%= @message.email %>">
    </div>

    <div class="form-group">
      <label class="control-label"><%= t.contact.message %></label>
      <textarea class="form-control" rows="5" name="message[body]" rows="16" cols="28"><%= @message.body %></textarea>
    </div>

    <button type="submit" class="btn btn-primary btn-lg"><%= t.contact.label %></button>
  </form>
